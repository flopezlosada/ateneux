{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}AÃ±adir archivo de seguimiento{% endblock %}
{% block main %}
    <div class="panel panel-default">

        <div class="panel-body">
            {{ form_start(form, {'attr': {'role': 'form' }}) }}
            <div class="row">
                <div class="col-lg-6">

                    <div class="form-group">
                        {{ form_errors(form.name) }}
                        <label>{{ form_label(form.name) }}</label>
                        {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':'Identifica el archivo'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_errors(form.file ) }}
                        <label>{{ form_label(form.file) }}</label>
                        {{ form_widget(form.file,{'attr':{'class':'form-control','placeholder':'Tipo de curso'}}) }}
                    </div>
                </div>
            </div>
            <input type="submit" value="Crear"/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}