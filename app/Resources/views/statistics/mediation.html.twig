{% extends '::layout_graph.html.twig' %}

{% block title_wrapper %}
    Resumen de mediaciones
{% endblock %}
{% block main %}
    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                Datos anuales
            </div>
            <div class="panel-body">

                <div id="container" style="width:100%; height:400px;"></div>

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">

                        <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Mediaciones</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% set total=0 %}
                        {% for mediations in course_year_mediations %}
                            <tr>
                                <td>{{ mediations[1] }}</td>
                                <td>{{ mediations[0] }}</td>
                            </tr>
                            {% set total= total + mediations[0] %}
                        {% endfor %}
                        <tr><td><strong>Total</strong></td><td>{{ total }}</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>

       <div class="panel panel-success">
            <div class="panel-heading">
                Datos mensuales
            </div>
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">

                        <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Septiembre</th>
                            <th>Octubre</th>
                            <th>Noviembre</th>
                            <th>Diciembre</th>
                            <th>Enero</th>
                            <th>Febrero</th>
                            <th>Marzo</th>
                            <th>Abril</th>
                            <th>Mayo</th>
                            <th>Junio</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for array_mediation in course_month_mediations %}
                            <tr>
                                <td>{{ array_mediation[1] }}</td>

                                {% for mediation in array_mediation[0] %}
                                    <td>{{ mediation }}</td>

                                    {% endfor %}


                            </tr>
                        {% endfor %}
                        <tr>
                            <td><strong>Total</strong></td>
                            {% for key, month in month_by_mediation %}
                               <td> {{ month }}</td>
                            {% endfor %}
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block graph_js %}

    <script src="https://code.highcharts.com/modules/drilldown.js"></script>
    <script>

        $(function () {
            var myChart = Highcharts.chart('container', {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Resumen mediaciones anuales'
                },

                subtitle: {
                    text: 'Trabajo de mediación con estudiantes de IES La Cabrera'
                },

                yAxis: {
                    title: {
                        text: 'Número de Mediaciones'
                    }
                },
                xAxis: {
                    type: 'category'
                },

                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y:.0f}</b> mediaciones<br/>'
                },

                legend: {
                    enabled: false
                },

                plotOptions: {
                    series: {
                        borderWidth: 0,
                        dataLabels: {
                            enabled: true,
                            format: '{point.y:.0f}'
                        }
                    }
                },

                series: [{
                    name: 'Resumen anual',
                    colorByPoint: true,
                    data: [
                        {% for mediations in course_year_mediations %}
                        {
                            name: '{{ mediations[1] }}',
                            y: {{ mediations[0] }},
                            drilldown: '{{ mediations[1] }}'
                        },
                        {% endfor %}
                    ]
                }],
                drilldown: {
                    series: [
                        {% for array_mediation in course_month_mediations %}
                        {
                            name: '{{  array_mediation[1] }}',
                            id: '{{  array_mediation[1]  }}',
                            data: [{% for key,mediation in  array_mediation[0]  %}
                                ["{{ key|month_names }}", {{ mediation }}],
                                {% endfor %}]

                        },
                        {% endfor %}
                    ]
                }
            });


        })
    </script>
{% endblock %}