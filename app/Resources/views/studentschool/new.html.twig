{% block specific_js %}
    <script>
        $('#appbundle_studentschool_adapted').change(function () {
            if ($(this).val() == 1) {
                // tinymce.get('appbundle_warning_information').setContent('');
                $('#adapted_type').hide('slow');
                $('#adapted_type').removeClass('hidden');
                $('#adapted_type').show('slow');
            }
            else {
                $('#adapted_type').hide('slow');
                $('#procedural_type').hide('slow');
                $('#appbundle_studentschool_adapted_type').val('');
                $('#appbundle_studentschool_adapted_subjects').val('');
                $('#appbundle_studentschool_procedural_type').val('');
            }
        });

        $('#appbundle_studentschool_adapted_type').change(function () {
            if ($(this).val() == 'procedural') {
                // tinymce.get('appbundle_warning_information').setContent('');
                $('#procedural_type').hide('slow');
                $('#procedural_type').removeClass('hidden');
                $('#procedural_type').show('slow');
            }
            else {
                $('#procedural_type').hide('slow');
                $('#appbundle_studentschool_adapted_subjects').val('');
                $('#appbundle_studentschool_procedural_type').val('');
            }
        });

        if ($('#appbundle_studentschool_adapted_type').val() == 'procedural') {
            $('#procedural_type').hide('slow');
            $('#procedural_type').removeClass('hidden');
            $('#procedural_type').show('slow');
        }
        if ($('#appbundle_studentschool_adapted').val() == 1) {
            // tinymce.get('appbundle_warning_information').setContent('');
            $('#adapted_type').hide('slow');
            $('#adapted_type').removeClass('hidden');
            $('#adapted_type').show('slow');
        }


        $('#appbundle_studentschool_psycho_report').change(function () {
            if ($(this).is(':checked')) {

                $('#psycho_report').removeClass('hidden');
                $('#psycho_report').show('slow');
            }
            else {
                $('#psycho_report').hide('slow');
                $('#appbundle_studentschool_psycho_evaluation').val('');
                $('#appbundle_studentschool_psycho_tips').val('');

            }
        });

        if ($('#appbundle_studentschool_psycho_report').is(':checked')) {
            $('#psycho_report').removeClass('hidden');
            $('#psycho_report').show('slow');
        }
        else {
            $('#psycho_report').hide('slow');
            $('#appbundle_studentschool_psycho_evaluation').val('');
            $('#appbundle_studentschool_psycho_tips').val('');

        }
    </script>
