{% extends '::layout_show.html.twig' %}
{% block more_css %}
    <link rel="stylesheet" href="{{ asset('bundles/app/fancybox/jquery.fancybox.css') }}"/>
{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>{{ assessmentBoard }}

            </h1>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">

                        <div class="well">
                            <h4>Acciones</h4>

                            <p><a href="{{ path('assessmentboardlearningdifficulties_new_group', {'id': assessmentBoard.id}) }}">
                                    <button class="btn btn-outline btn-default" type="button">Añadir estudiantes con dificultades académicas
                                    </button>
                                </a>
                                <a href="">
                                    <button class="btn btn-outline btn-warning" type="button">Añadir estudiantes con dificultades de convivencia
                                    </button>
                                </a></p>
                            <p><a href="">
                                    <button class="btn btn-outline btn-success" type="button">Añadir estudiantes cuyos padres debe citar el tutor de forma inmediata
                                    </button>
                                </a></p>
                        </div>
                    <p><strong>Evaluación: </strong>{{ assessmentBoard.assessmentType }}</p>
                    <p><strong>Fecha:</strong> {{ assessmentBoard.date|localizeddate('long','none','es') }}</p>
                    <p><strong>Valoración general del grupo: </strong>{{ assessmentBoard.information|raw }}</p>
                    <p><strong>Estudiantes con dificultades académicas: </strong>{{ assessmentBoard.learningDifficulties|raw }}</p>
                    {% for difficult in assessmentBoard.getAssessmentsBoardLearningDifficulties  %}
                        <div class="border"><p > <a href="{{ path('student_show', {'id': difficult.student.id}) }}"> {{ difficult.student }}</a><br>
                            {{ difficult.learningDifficulties }}
                            </p>
                            <p><a href="{{ path('assessmentboardlearningdifficulties_edit', {'id': difficult.id}) }}">Editar</a> </p>
                        </div>
                        {% endfor %}
                    <p><strong>Estudiantes con dificultades de convivencia: </strong>{{ assessmentBoard.coexistenceDifficulties|raw }}</p>
                    <p><strong>Estudiantes cuyos padres debe citar la/el tutora/or de forma inmediata: </strong>{{ assessmentBoard.familyDate|raw }}</p>
                    <p><strong>Estudiantes que precisan algún tipo de apoyo: </strong>{{ assessmentBoard.support|raw }}</p>
                    <p><strong>Estudiantes que deben cambiar de optativa: </strong>{{ assessmentBoard.changeOptional|raw }}</p>
                    <p><strong>Otras cuestiones de interés para Jefatura de Estudios o Dpto. de Orientación: </strong>{{ assessmentBoard.otherInteresting|raw }}</p>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            {% include ':assessmentboard:record_actions.html.twig' with {'entity':assessmentBoard} %}
        </div>
    </div>

{% endblock %}