
{% extends '::layout_show.html.twig' %}
{% block more_css %}
    <link rel="stylesheet" href="{{ asset('bundles/app/fancybox/jquery.fancybox.css') }}"/>
{% endblock %}
{% block main -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h1>Reuni√≥n {{ meeting.title }}
            ({{ meeting.meetingStatus }})
            Fecha: {{ meeting.date|localizeddate('long','none','es') }} </h1>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-info">
                    <p><a href="{{ path('student_show', {'id': meeting.studentMeeting.id}) }}">{{ meeting.studentMeeting }}</a> </p>
                </div>
                <p><strong>Asuntos tratados:</strong> {{ meeting.handleIssues }}</p>
                <p><strong>Acuerdos:</strong> {{ meeting.deals }}</p>
                <p><strong>Observaciones:</strong> {{ meeting.observations }}</p>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        {% include ':meeting:record_actions.html.twig' with {'entity':meeting} %}
    </div>
</div>

{% endblock %}
