{% extends '::layout_list.html.twig' %}
{% block title_wrapper %}Mediaci√≥n con {{ first_student }}{% endblock %}
{% block main -%}
    <div class="panel panel-default">
        <div class="panel-heading">
            Listado con un total de <strong>{{ students|length }}</strong> estudiantxs.
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table id="table_list" class="table table-striped table-bordered table-hover dataTable no-footer"
                       aria-describedby="dataTables-example_info">
                    <thead>
                    <tr>
                        <th>Nombre completo</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr role="row">
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for student in students %}
                        <tr>
                            <td><a href={{ path('student_mediation_second', {'first_student': first_student.id, 'second_student': student.id }) }}>{{ student }}</a></td>
                            <td>{{ student.course }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}