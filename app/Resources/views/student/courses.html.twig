{% extends '::layout_show.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">Selecciona el curso en el que participa la/el estudiante: {{ student }} para el
            año {{ real_course }}</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    {% for course in courses %}

                        {% if loop.first %}
                            <ul>
                        {% endif %}
                        <li>
                            <a href="{{ path('student_course_selected', {'course_id': course.id, 'student_id': student.id}) }}">{{ course }}</a>
                        </li>
                        {% if loop.last %}
                            </ul>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-info">No se han definido cursos</div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title_wrapper %}
    Selección de curso para estudiante
{% endblock %}



