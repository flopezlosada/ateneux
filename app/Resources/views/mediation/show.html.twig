{% extends '::layout_show.html.twig' %}
{% block more_css %}
    <link rel="stylesheet" href="{{ asset('bundles/app/fancybox/jquery.fancybox.css') }}"/>
{% endblock %}
{% block main -%}
<div class="panel panel-default">
    <div class="panel-heading">
        <h1>Mediación entre estudiantes: {{ mediation.firstStudent }} y {{ mediation.secondStudent }}

        </h1>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <strong>Fecha:</strong>  {{ mediation.date|localizeddate('long','none','es') }}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <a href="{{ path('student_show', {'id': mediation.firstStudent.id}) }}"> {{ mediation.firstStudent }}</a>
                    </div>
                    <div class="panel-body">
                        <strong>Acepta Mediación:</strong>
                        {% if mediation.acceptfirststudent %}
                            Sí <br/>
                            {{ mediation.firstStudentObservations|raw }}
                        {% else %}
                            No
                        {% endif %}
                    </div>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <a href="{{ path('student_show', {'id': mediation.secondStudent.id}) }}"> {{ mediation.secondStudent }}</a>
                    </div>
                    <div class="panel-body">
                        <strong>Acepta Mediación:</strong>
                        {% if mediation.acceptsecondstudent %}
                            Sí <br/>
                            {{ mediation.secondStudentObservations|raw }}
                        {% else %}
                            No
                        {% endif %}
                    </div>

                </div>
            </div>
            <div class="col-lg-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        Acuerdos tomados
                    </div>
                    <div class="panel-body">
                        {{ mediation.deals|raw }}
                    </div>
                </div>
            </div>


        </div>
        <div class="panel-footer">
            {% include ':mediation:record_actions.html.twig' %}
        </div>
    </div>

    {% endblock %}
