{% extends '::layout_crud.html.twig' %}
{% block title_wrapper %}Añadir Estudiante{% endblock %}
{% block main -%}
    <div class="panel panel-default">

    <div class="panel-body">
        {{ form_start(form,{'attr': {'role': 'form' }}) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    {{ form_errors(form.date) }}
                    <label>{{ form_label(form.date) }}</label>
                    {{ form_widget(form.date,{'attr':{'placeholder':'Fecha de la reunión'}}) }}
                </div>
                <div class="col-lg-6">
                    {{ form_errors(form.student_mediator) }}
                    <label>{{ form_label(form.student_mediator) }}</label>
                    {{ form_widget(form.student_mediator,{'attr':{'placeholder':'','class':'form-control'}}) }}
                </div>

                <div class="col-lg-6">
                    {{ form_errors(form.teacher_mediator) }}
                    <label>{{ form_label(form.teacher_mediator) }}</label>
                    {{ form_widget(form.teacher_mediator,{'attr':{'placeholder':'','class':'form-control'}}) }}
                </div>

            </div>
        </div>
        <div class="row">
            <div class="panel-body">
                <div class="col-lg-6">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <a href="{{ path('student_show', {'id': first_student.id}) }}"> {{ first_student }}</a>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                {{ form_errors(form.accept_first_student) }}
                                {{ form_widget(form.accept_first_student) }}
                                {{ form_label(form.accept_first_student) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.first_student_observations) }}
                                <label>{{ form_label(form.first_student_observations) }}</label>
                                {{ form_widget(form.first_student_observations,{'attr':{'placeholder':'Observaciones','class':'tinymce'}}) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <a href="{{ path('student_show', {'id': second_student.id}) }}"> {{ second_student }}</a>
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                {{ form_errors(form.accept_second_student) }}
                                {{ form_widget(form.accept_second_student) }}
                                {{ form_label(form.accept_second_student) }}
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.second_student_observations) }}
                                <label>{{ form_label(form.second_student_observations) }}</label>
                                {{ form_widget(form.second_student_observations,{'attr':{'placeholder':'Observaciones','class':'tinymce'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="panel panel-success">
                        <div class="panel-heading">
                            Acuerdos tomados
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                {{ form_errors(form.deals) }}
                                <label>{{ form_label(form.deals) }}</label>
                                {{ form_widget(form.deals,{'attr':{'placeholder':'Acuerdos','class':'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" value="Create"/>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block specific_js %}
        {{ tinymce_init() }}
{% endblock %}