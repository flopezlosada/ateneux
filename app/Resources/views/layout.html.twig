{% extends '::base.html.twig' %}
{% block body %}

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            {% include '::top_navigation.html.twig' %}
            {% include '::navigation.html.twig' %}
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            {% block warning %}
                <div class="row">
                    <div class="col-lg-12">
                        {#{{ render(controller('AppBundle:Default:warning')) }}#}
                        {% block flash_messages %}
                            {% for flashMessage in app.flashes('notice') %}
                                <div class="flash-notice">         {{ flashMessage }}     </div> {% endfor %}
                            {% for flashMessage in app.flashes('error') %}
                                <div class="flash-error">         {{ flashMessage }}     </div> {% endfor %}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
            <div class="row">
                <div class="col-lg-12"><h1>{% block title_wrapper %}{% endblock %}</h1>
                </div>
            </div>

            {% block main %}{% endblock %}

        </div>

    </div>

{% endblock %}