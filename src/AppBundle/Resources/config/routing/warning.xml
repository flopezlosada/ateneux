<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="warning_index" path="/" methods="GET">
        <default key="_controller">AppBundle:Warning:index</default>
    </route>

    <route id="warning_show" path="/{id}/show" methods="GET">
        <default key="_controller">AppBundle:Warning:show</default>
    </route>

    <route id="warning_new" path="/{student}/new" methods="GET|POST">
        <default key="_controller">AppBundle:Warning:new</default>
    </route>

    <route id="warning_edit" path="/{id}/edit/{student}" methods="GET|POST">
        <default key="_controller">AppBundle:Warning:edit</default>
    </route>

    <route id="warning_delete" path="/{id}/delete" methods="DELETE">
        <default key="_controller">AppBundle:Warning:delete</default>
    </route>

</routes>
